// Place your key bindings in this file to override the defaults
[
    {
        "key": "shift+l",
        "command": "workbench.action.nextEditor",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "shift+h",
        "command": "workbench.action.previousEditor",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "shift+k",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusAboveGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusBelowGroup",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "shift+k",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "] d",
        "command": "editor.action.marker.next",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "[ d",
        "command": "editor.action.marker.prev",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    // code
    // {
    //     "key": "g r",
    //     "command": "editor.action.referenceSearch.trigger",
    //     "when": "editorHasReferenceProvider && editorTextFocus && vim.active && vim.mode != 'Insert'"
    // },
    {
        "key": "space c a",
        "command": "editor.action.quickFix",
        "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly && vim.mode != 'Insert'"
    },
    {
        "key": "space c a",
        "command": "problems.action.showQuickFixes",
        "when": "problemFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space c a",
        "command": "workbench.action.quickFixProblem",
        "when": "problemFocus && vim.mode != 'Insert'"
    },
    {
        "key": "space c a",
        "command": "editor.action.sourceAction",
        "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert'"
    },
    {
        "key": "space c a",
        "command": "editor.action.organizeImports",
        "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert'"
    },
    {
        "key": "space c a",
        "command": "editor.action.refactor",
        "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly && vim.mode != 'Insert'"
    },
    // leader key 
    {
        "key": "space b d",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space f f",
        "command": "workbench.action.quickOpen",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space s g",
        "command": "workbench.action.findInFiles",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space c f",
        "command": "editor.action.formatDocument",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space c o",
        "command": "editor.action.organizeImports",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space w \\",
        "command": "workbench.action.splitEditorRight",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space w -",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": "space f e",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'",
    },
    // lazygit
    {
        "key": "space g g",
        "command": "runCommands",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'",
        "args": {
            "commands": [
                "workbench.action.terminal.focus",
                {
                    "command": "workbench.action.terminal.sendSequence",
                    "args": {
                        "text": "lazygit\u000D"
                    },
                }
            ]
        },
    },
]